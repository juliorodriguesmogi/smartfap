           }
       }
	   function carrega_empresas(){
                 buscar_registros(window,'empresas',"Carrega_Empresas",'','',false,'=',newEmpresas);
                 codigo_empresa=document.forms[1].elements['CODIGO_EMPRESA_ATIVA'].value;
